%h1 All of my monies
%hr

- if @bank_accounts.any?
  %ul
    - @bank_accounts.each do |bank_account|
      %li.bank-account
        %h3
          Institution:
          = link_to bank_account.institution, bank_account_path(bank_account), class: 'show-account'
        %p
          Description:
          = bank_account.description
          = link_to 'Delete', bank_account_path(bank_account), class: 'delete-account', method: :delete, data: { confirm: 'Really Delete?'}
        %hr


- else
  %h3 No Bank Accounts, Please Create One!

%br

= link_to 'Log in', new_user_registration_path, id: 'new_user_session'
= link_to 'Log out', destroy_user_session_path, id: 'destroy-user-session'
= link_to 'New Bank Account', new_bank_account_path, id: 'new-bank-account'
